<Page
    class="page"
    xmlns="http://www.nativescript.org/tns.xsd"
    shownModally="onShownModally">
  <StackLayout
      class="form"
      padding="20">
    <Label textWrap="true">
      <FormattedString>
        <Span text="Eliminando " />
        <Span text="'" />
        <Span text="{{ lista.title }}" />
        <Span text="'" />
        <Span text=" esto incluye todos sus elementos." />
      </FormattedString>
    </Label>
    <StackLayout orientation="horizontal">
      <Button
          text="Si, Eliminar"
          tap="{{ yes }}" />
      <Button
          text="Cancelar"
          tap="{{ cancel }}" />
    </StackLayout>
  </StackLayout>
</Page>
